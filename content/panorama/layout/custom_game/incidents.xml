<root>
    <styles>
        <include src="file://{resources}/styles/custom_game/incidents.css" />
    </styles>

    <scripts>
        <include src="file://{resources}/scripts/custom_game/rwutils.js" />
        <include src="file://{resources}/scripts/custom_game/problem_data.js" />
        <include src="file://{resources}/scripts/custom_game/incident_data.js" />
        <include src="file://{resources}/scripts/custom_game/incidents_ui.js" />
        <include src="file://{resources}/scripts/custom_game/incidents.js" />
    </scripts>

    <snippets>
        <snippet name="Incident">
            <Panel id="Incident" class="Init">
                <Image id="Letter" src="file://{images}/custom_game/letter.png" />
                <Label id="Name" />
                <Button id="TooltipDummy" />
            </Panel>
        </snippet>

        <snippet name="TooltipSmall">
            <Label id="TooltipSmall" html="true" />
        </snippet>

        <snippet name="TooltipLarge">
            <Button id="HitBlocker" style="width: 100%; height: 100%;">
                <Label id="TooltipLarge" html="true">
                    <TextButton id="Jump" text="Jump to location" />
                    <TextButton id="Close" text="Close" />
                </Label>
            </Button>
        </snippet>

        <snippet name="Arrow">
            <Image id="Arrow" src="file://{images}/custom_game/arrow.png" />
        </snippet>
    </snippets>

    <Panel style="width: 100%; height: 100%;">
        <Panel id="Container">
            <Label id="Date" html="true" />
            <Label id="Forecast" />
            <Panel id="Incidents" />
            <Panel id="Problems">
                <Panel id="Major" />
                <Panel id="Minor" />
            </Panel>
        </Panel>
    </Panel>
</root>
