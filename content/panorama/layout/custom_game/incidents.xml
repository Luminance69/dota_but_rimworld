<root>
    <styles>
        <include src="file://{resources}/styles/custom_game/incidents.css" />
    </styles>

    <scripts>
        <include src="file://{resources}/scripts/custom_game/incidents_ui.js" />
        <include src="file://{resources}/scripts/custom_game/incidents.js" />
    </scripts>

    <snippets>
        <snippet name="Incident">
            <Panel id="Incident" hittest="false">
                <Image id="Letter" hittest="false" />
                <Label id="Name" hittest="false" />
                <Button id="TooltipDummy">
                    <Panel id="TooltipContainer" hittest="false">
                        <Label id="Tooltip" hittest="false" />
                    </Panel>
                </Button>
            </Panel>
        </snippet>

        <snippet name="TooltipLarge">
            <Label id="TooltipLarge">
                <TextButton id="Jump" text="Jump to location" />
                <TextButton id="Close" text="Close" />
            </Label>
        </snippet>
    </snippets>

    <Panel hittest="false" style="width: 100%; height: 100%;">
        <Panel id="Incidents" hittest="false" />
    </Panel>
</root>
