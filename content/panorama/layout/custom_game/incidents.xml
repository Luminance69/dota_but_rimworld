<root>
    <styles>
        <include src="file://{resources}/styles/custom_game/incidents.css" />
    </styles>

    <scripts>
        <include src="file://{resources}/scripts/custom_game/rwutils.js" />
        <include src="file://{resources}/scripts/custom_game/problem_data.js" />
        <include src="file://{resources}/scripts/custom_game/incidents_ui.js" />
        <include src="file://{resources}/scripts/custom_game/incidents.js" />
    </scripts>

    <snippets>
        <snippet name="Incident">
            <Panel id="Incident" hittest="false">
                <Image id="Letter" hittest="false" src="file://{images}/custom_game/letter.png" />
                <Label id="Name" hittest="false" />
                <Button id="TooltipDummy" />
            </Panel>
        </snippet>

        <snippet name="Problem">
            <Label id="Problem" />
        </snippet>

        <snippet name="TooltipSmall">
            <Label id="TooltipSmall" hittest="false" html="true" />
        </snippet>

        <snippet name="TooltipLarge">
            <Label id="TooltipLarge" html="true">
                <TextButton id="Jump" text="Jump to location" />
                <TextButton id="Close" text="Close" />
            </Label>
        </snippet>

        <snippet name="Arrow">
            <Image id="Arrow" hittest="false" src="file://{images}/custom_game/arrow.png" />
        </snippet>
    </snippets>

    <Panel hittest="false" style="width: 100%; height: 100%;">
        <Panel id="Container" hittest="false">
            <Panel id="Incidents" hittest="false" />
            <Panel id="Problems" hittest="false">
                <Panel id="Minor" hittest="false" />
                <Panel id="Major" hittest="false" />
            </Panel>
        </Panel>
    </Panel>
</root>
